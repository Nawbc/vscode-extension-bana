{
  "name": "vscode-extension-muguet",
  "displayName": "vscode-extension-muguet",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.36.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "muguet.detailAnnotation",
        "title": "Muguet-Annotation detail"
      },
      {
        "command": "muguet.blockAnnotation",
        "title": "Muguet-Annotation block"
      },
      {
        "command": "muguet.titleAnnotation",
        "title": "Muguet-Annotation title"
      }
    ],
    "menus": {},
    "keybindings": [
      {
        "command": "muguet.blockAnnotation",
        "key": "ctrl+alt+]",
        "when": "editorTextFocus"
      },
      {
        "command": "muguet.detailAnnotation",
        "key": "ctrl+alt+[",
        "when": "editorTextFocus"
      },
      {
        "command": "muguet.titleAnnotation",
        "key": "ctrl+alt+0",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "muguet",
      "properties": {
        "muguet.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable the muguet"
        },
        "muguet.width": {
          "type": "number",
          "default": 100,
          "description": "annotation /* distance from text"
        },
        "muguet.annotationIntends": {
          "type": "number",
          "default": 6,
          "description": "annotation /* distance from text"
        },
        "muguet.defaultStyle": {
          "type": "object",
          "description": "Default style for all customized keywords",
          "properties": {
            "color": {
              "type": "string",
              "description": ""
            },
            "backgroundColor": {
              "type": "string",
              "description": ""
            }
          }
        },
        "muguet.include": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.jsx",
            "**/*.ts",
            "**/*.tsx",
            "**/*.html",
            "**/*.php",
            "**/*.css",
            "**/*.scss"
          ],
          "description": "",
          "items": {
            "anyOf": [
              {
                "type": "string",
                "description": ""
              }
            ]
          }
        },
        "muguet.exclude": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/dist/**",
            "**/build/**",
            "**/.vscode/**",
            "**/.github/**",
            "**/out/**",
            "**/*.min.*",
            "**/*.map",
            "**/release/**"
          ],
          "description": "",
          "items": {
            "anyOf": [
              {
                "type": "string",
                "description": ""
              }
            ]
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.36.0",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "typescript": "^3.3.1",
    "tslint": "^5.12.1",
    "vscode-test": "^1.0.2"
  }
}